{
  "swagger": "2.0",
  "info": {
    "title": "My API Project for a School's bd",
    "description": "Is a RESTful API for my contacts created as part of my class assignment for CSE 341.",
    "version": "1.0.0"
  },
  "host": [
    "cse-341-webservices-personal-project.onrender.com"
  ],
  "basePath": "/",
  "schemes": [
    "https"
  ],
  "paths": {
    "/contacts/": {
      "get": {
        "description": "Retrieve all contacts",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "description": "Create a new student contact",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/Contact"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/contacts/{id}": {
      "get": {
        "description": "Retrieve a single contact by ID",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "description": "Update a contact by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/Contact"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "description": "Delete a contact by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/contacts/admin/{id}": {
      "patch": {
        "description": "Partially update a contact by ID for admin",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/AdminContact"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "definitions": {
    "Contact": {
      "type": "object",
      "properties": {
        "first_name": {
          "type": "string"
        },
        "last_name": {
          "type": "string"
        },
        "date_of_birth": {
          "type": "string",
          "format": "date"
        },
        "password": {
          "type": "string"
        },
        "nationality": {
          "type": "string"
        },
        "semester": {
          "type": "integer"
        },
        "parents": {
          "type": "object",
          "properties": {
            "mother": {
              "type": "string"
            },
            "father": {
              "type": "string"
            }
          }
        },
        "contact_numbers": {
          "type": "object",
          "properties": {
            "phone_num": {
              "type": "string"
            },
            "parents": {
              "type": "object",
              "properties": {
                "mother": {
                  "type": "string"
                },
                "father": {
                  "type": "string"
                }
              }
            }
          }
        },
        "public_profile": {
          "type": "object",
          "properties": {
            "hobbies": {
              "type": "string"
            },
            "plans_after_graduation": {
              "type": "string"
            },
            "major": {
              "type": "string"
            },
            "years_to_graduate": {
              "type": "integer"
            }
          }
        }
      },
      "required": [
        "first_name",
        "last_name",
        "date_of_birth",
        "password"
      ]
    },
    "AdminContact": {
      "type": "object",
      "properties": {
        "first_name": {
          "type": "string"
        },
        "last_name": {
          "type": "string"
        },
        "date_of_birth": {
          "type": "string",
          "format": "date"
        },
        "password": {
          "type": "string"
        },
        "nationality": {
          "type": "string"
        },
        "account_type": {
          "type": "string",
          "enum": [
            "admin"
          ]
        },
        "contact_numbers": {
          "type": "object",
          "properties": {
            "phone_num": {
              "type": "string"
            }
          }
        },
        "public_profile": {
          "type": "object",
          "properties": {
            "hobbies": {
              "type": "string"
            },
            "years_of_service": {
              "type": "integer"
            },
            "department": {
              "type": "string",
              "enum": [
                "Administration"
              ]
            },
            "role": {
              "type": "string"
            }
          }
        }
      },
      "required": [
        "first_name",
        "last_name",
        "date_of_birth",
        "password",
        "account_type"
      ]
    }
  }
}